<div class="page-header">
<h3>Users</h3>
</div>
<table class="table table-striped table-hover">

    <th> Last, First Name</th>
    <th> Email </th>
    <th> Admin </th>
<% @users.each do |user| %>
  <tr>
    <div class="container">
    <td><%= user.lastname %>, <%= user.firstname %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary" %> <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: "btn btn-danger" %></td>
    </div>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path, class: "btn btn-success" %>
